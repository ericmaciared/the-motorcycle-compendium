---
const currentPath = Astro.url.pathname;
---

<nav class="bg-topo-50/95 backdrop-blur-sm sticky top-0 z-50 elevation-2">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Brand - Text only -->
      <a href="/" class="flex items-center gap-3 group">
        <span class="text-xl font-bold text-topo-900 group-hover:text-signal-blue transition-colors tracking-tight">
          The Motorbike Compendium
        </span>
      </a>

      <!-- Navigation Links - Minimal, clean -->
      <div class="hidden md:flex items-center gap-1">
        <a
          href="/"
          class={`px-4 py-2 font-medium text-sm uppercase tracking-wider transition-all ${
            currentPath === '/'
              ? 'text-topo-900 relative after:absolute after:bottom-0 after:left-0 after:right-0 after:h-0.5 after:bg-signal-blue'
              : 'text-topo-600 hover:text-topo-900'
          }`}
        >
          Home
        </a>
        <a
          href="/bikes"
          class={`px-4 py-2 font-medium text-sm uppercase tracking-wider transition-all ${
            currentPath.startsWith('/bikes')
              ? 'text-topo-900 relative after:absolute after:bottom-0 after:left-0 after:right-0 after:h-0.5 after:bg-signal-blue'
              : 'text-topo-600 hover:text-topo-900'
          }`}
        >
          Browse Bikes
        </a>
        <a
          href="/manufacturers"
          class={`px-4 py-2 font-medium text-sm uppercase tracking-wider transition-all ${
            currentPath.startsWith('/manufacturers')
              ? 'text-topo-900 relative after:absolute after:bottom-0 after:left-0 after:right-0 after:h-0.5 after:bg-signal-blue'
              : 'text-topo-600 hover:text-topo-900'
          }`}
        >
          Manufacturers
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 hover:bg-topo-200 transition-colors text-topo-700"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-1">
        <a
          href="/"
          class={`px-4 py-2 font-medium text-sm uppercase tracking-wider transition-all ${
            currentPath === '/'
              ? 'text-topo-900 bg-topo-200'
              : 'text-topo-600 hover:bg-topo-100'
          }`}
        >
          Home
        </a>
        <a
          href="/bikes"
          class={`px-4 py-2 font-medium text-sm uppercase tracking-wider transition-all ${
            currentPath.startsWith('/bikes')
              ? 'text-topo-900 bg-topo-200'
              : 'text-topo-600 hover:bg-topo-100'
          }`}
        >
          Browse Bikes
        </a>
        <a
          href="/manufacturers"
          class={`px-4 py-2 font-medium text-sm uppercase tracking-wider transition-all ${
            currentPath.startsWith('/manufacturers')
              ? 'text-topo-900 bg-topo-200'
              : 'text-topo-600 hover:bg-topo-100'
          }`}
        >
          Manufacturers
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
