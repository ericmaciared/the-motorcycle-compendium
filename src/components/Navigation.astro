---
const currentPath = Astro.url.pathname;
---

<nav class="bg-white shadow-md sticky top-0 z-50 border-b border-slate-200">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Brand -->
      <a href="/" class="flex items-center space-x-2 group">
        <span class="text-3xl">üèçÔ∏è</span>
        <span class="text-xl font-bold bg-gradient-to-r from-blue-600 to-blue-400 bg-clip-text text-transparent group-hover:from-blue-700 group-hover:to-blue-500 transition-all">
          The Motorbike Compendium
        </span>
      </a>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-1">
        <a
          href="/"
          class={`px-4 py-2 rounded-lg font-semibold transition-all ${
            currentPath === '/'
              ? 'bg-blue-100 text-blue-700'
              : 'text-slate-700 hover:bg-slate-100'
          }`}
        >
          Home
        </a>
        <a
          href="/bikes"
          class={`px-4 py-2 rounded-lg font-semibold transition-all ${
            currentPath.startsWith('/bikes')
              ? 'bg-blue-100 text-blue-700'
              : 'text-slate-700 hover:bg-slate-100'
          }`}
        >
          Browse Bikes
        </a>
        <a
          href="/manufacturers"
          class={`px-4 py-2 rounded-lg font-semibold transition-all ${
            currentPath.startsWith('/manufacturers')
              ? 'bg-blue-100 text-blue-700'
              : 'text-slate-700 hover:bg-slate-100'
          }`}
        >
          Manufacturers
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-lg hover:bg-slate-100 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-2">
        <a
          href="/"
          class={`px-4 py-2 rounded-lg font-semibold transition-all ${
            currentPath === '/'
              ? 'bg-blue-100 text-blue-700'
              : 'text-slate-700 hover:bg-slate-100'
          }`}
        >
          Home
        </a>
        <a
          href="/bikes"
          class={`px-4 py-2 rounded-lg font-semibold transition-all ${
            currentPath.startsWith('/bikes')
              ? 'bg-blue-100 text-blue-700'
              : 'text-slate-700 hover:bg-slate-100'
          }`}
        >
          Browse Bikes
        </a>
        <a
          href="/manufacturers"
          class={`px-4 py-2 rounded-lg font-semibold transition-all ${
            currentPath.startsWith('/manufacturers')
              ? 'bg-blue-100 text-blue-700'
              : 'text-slate-700 hover:bg-slate-100'
          }`}
        >
          Manufacturers
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
