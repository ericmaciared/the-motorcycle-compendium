---
const currentPath = Astro.url.pathname;
---

<nav class="bg-topo-50/95 backdrop-blur-sm sticky top-0 z-50 elevation-2">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Brand - Text only -->
      <a href="/" class="flex items-center gap-3 group">
        <span class="text-xl font-bold text-topo-900 group-hover:text-signal-blue transition-colors tracking-tight">
          The Motorbike Compendium
        </span>
      </a>

      <!-- Navigation Links - Minimal, clean -->
      <div class="hidden md:flex items-center gap-6">
        <a
          href="/"
          class={`px-4 py-2 font-medium text-sm uppercase tracking-wider transition-all ${
            currentPath === '/'
              ? 'text-topo-900 relative after:absolute after:bottom-0 after:left-0 after:right-0 after:h-0.5 after:bg-signal-blue'
              : 'text-topo-600 hover:text-topo-900'
          }`}
        >
          Home
        </a>
        <a
          href="/bikes"
          class={`px-4 py-2 font-medium text-sm uppercase tracking-wider transition-all ${
            currentPath.startsWith('/bikes')
              ? 'text-topo-900 relative after:absolute after:bottom-0 after:left-0 after:right-0 after:h-0.5 after:bg-signal-blue'
              : 'text-topo-600 hover:text-topo-900'
          }`}
        >
          Browse Bikes
        </a>
        <a
          href="/manufacturers"
          class={`px-4 py-2 font-medium text-sm uppercase tracking-wider transition-all ${
            currentPath.startsWith('/manufacturers')
              ? 'text-topo-900 relative after:absolute after:bottom-0 after:left-0 after:right-0 after:h-0.5 after:bg-signal-blue'
              : 'text-topo-600 hover:text-topo-900'
          }`}
        >
          Manufacturers
        </a>

        <!-- Theme Toggle Button -->
        <button
          id="theme-toggle"
          class="p-2 hover:bg-topo-200 transition-colors text-topo-700 rounded-sm"
          aria-label="Toggle theme"
          title="Toggle theme"
        >
          <svg id="theme-icon-light" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
          <svg id="theme-icon-dark" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 hover:bg-topo-200 transition-colors text-topo-700"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-1">
        <a
          href="/"
          class={`px-4 py-2 font-medium text-sm uppercase tracking-wider transition-all ${
            currentPath === '/'
              ? 'text-topo-900 bg-topo-200'
              : 'text-topo-600 hover:bg-topo-100'
          }`}
        >
          Home
        </a>
        <a
          href="/bikes"
          class={`px-4 py-2 font-medium text-sm uppercase tracking-wider transition-all ${
            currentPath.startsWith('/bikes')
              ? 'text-topo-900 bg-topo-200'
              : 'text-topo-600 hover:bg-topo-100'
          }`}
        >
          Browse Bikes
        </a>
        <a
          href="/manufacturers"
          class={`px-4 py-2 font-medium text-sm uppercase tracking-wider transition-all ${
            currentPath.startsWith('/manufacturers')
              ? 'text-topo-900 bg-topo-200'
              : 'text-topo-600 hover:bg-topo-100'
          }`}
        >
          Manufacturers
        </a>

        <!-- Theme Toggle Button (Mobile) -->
        <button
          id="theme-toggle-mobile"
          class="px-4 py-2 font-medium text-sm uppercase tracking-wider text-topo-600 hover:bg-topo-100 transition-all flex items-center gap-2"
        >
          <svg id="theme-icon-light-mobile" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
          <svg id="theme-icon-dark-mobile" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
          </svg>
          <span id="theme-text-mobile">Toggle Theme</span>
        </button>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Theme toggle functionality
  const themeToggle = document.getElementById('theme-toggle');
  const themeToggleMobile = document.getElementById('theme-toggle-mobile');
  const lightIcon = document.getElementById('theme-icon-light');
  const darkIcon = document.getElementById('theme-icon-dark');
  const lightIconMobile = document.getElementById('theme-icon-light-mobile');
  const darkIconMobile = document.getElementById('theme-icon-dark-mobile');

  // Update icon visibility based on current theme
  const updateThemeIcon = () => {
    const currentTheme = document.documentElement.getAttribute('data-theme');
    if (currentTheme === 'dark') {
      // Show sun icon (to switch to light)
      lightIcon?.classList.remove('hidden');
      darkIcon?.classList.add('hidden');
      lightIconMobile?.classList.remove('hidden');
      darkIconMobile?.classList.add('hidden');
    } else {
      // Show moon icon (to switch to dark)
      lightIcon?.classList.add('hidden');
      darkIcon?.classList.remove('hidden');
      lightIconMobile?.classList.add('hidden');
      darkIconMobile?.classList.remove('hidden');
    }
  };

  // Initialize icon on page load
  updateThemeIcon();

  // Handle theme toggle clicks
  themeToggle?.addEventListener('click', () => {
    (window as any).toggleTheme();
    updateThemeIcon();
  });

  themeToggleMobile?.addEventListener('click', () => {
    (window as any).toggleTheme();
    updateThemeIcon();
  });

  // Listen for theme changes from other sources
  window.addEventListener('themechange', () => {
    updateThemeIcon();
  });
</script>
