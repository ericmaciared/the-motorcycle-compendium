---
import BaseLayout from '../layouts/BaseLayout.astro';
import BikeCard from '../components/BikeCard.astro';
import SearchBar from '../components/SearchBar';
import { supabase } from '../lib/supabase';

const { data: bikes, error } = await supabase
  .from('motorbike_variants')
  .select(`
    *,
    motorbike_models!inner (
      name,
      category,
      manufacturers!inner (
        name
      )
    )
  `)
  .order('created_at', { ascending: false })
  .limit(8);

const motorcycles = bikes?.map(bike => ({
  id: bike.id,
  slug: bike.slug,
  variant_name: bike.variant_name,
  year: bike.year,
  price_usd: bike.price_usd,
  engine_displacement_cc: bike.engine_displacement_cc,
  horsepower_hp: bike.horsepower_hp,
  description: bike.description,
  model_name: bike.motorbike_models.name,
  manufacturer_name: bike.motorbike_models.manufacturers.name,
  category: bike.motorbike_models.category,
})) || [];

const { data: manufacturers } = await supabase.from('manufacturers').select('*');
const manufacturerCount = manufacturers?.length || 0;
const bikeCount = bikes?.length || 0;
---

<BaseLayout title="The Motorbike Compendium - Your Complete Motorcycle Reference">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 to-slate-800 text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">
        🏍️ The Motorbike Compendium
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-slate-300 max-w-2xl mx-auto">
        Your complete motorcycle reference with AI-powered insights
      </p>
      
      <!-- Functional Search Bar -->
      <div class="max-w-2xl mx-auto">
        <SearchBar client:load placeholder="Search by make, model, or type..." />
      </div>
    </div>
  </section>

  <!-- Rest of your homepage stays the same... -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div class="bg-white rounded-lg shadow-md p-8">
          <div class="text-4xl font-bold text-blue-600 mb-2">{bikeCount}</div>
          <div class="text-slate-600">Motorcycle Models</div>
        </div>
        <div class="bg-white rounded-lg shadow-md p-8">
          <div class="text-4xl font-bold text-blue-600 mb-2">{manufacturerCount}</div>
          <div class="text-slate-600">Manufacturers</div>
        </div>
        <div class="bg-white rounded-lg shadow-md p-8">
          <div class="text-4xl font-bold text-blue-600 mb-2">AI</div>
          <div class="text-slate-600">Powered Insights</div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-3xl font-bold">Featured Motorcycles</h2>
        <a href="/bikes" class="text-blue-600 hover:text-blue-700 font-semibold">
          View All →
        </a>
      </div>
      
      {motorcycles.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {motorcycles.map(bike => (
            <BikeCard bike={bike} />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-slate-600">No motorcycles found. Run the seed script to add data!</p>
        </div>
      )}
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Browse by Category</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <a href="/bikes?category=Sport" class="bg-slate-100 rounded-lg p-6 text-center hover:bg-slate-200 transition cursor-pointer">
          <div class="text-4xl mb-3">🏁</div>
          <div class="font-semibold">Sport</div>
        </a>
        <a href="/bikes?category=Cruiser" class="bg-slate-100 rounded-lg p-6 text-center hover:bg-slate-200 transition cursor-pointer">
          <div class="text-4xl mb-3">🛣️</div>
          <div class="font-semibold">Cruiser</div>
        </a>
        <a href="/bikes?category=Adventure" class="bg-slate-100 rounded-lg p-6 text-center hover:bg-slate-200 transition cursor-pointer">
          <div class="text-4xl mb-3">🏔️</div>
          <div class="font-semibold">Adventure</div>
        </a>
        <a href="/bikes?category=Touring" class="bg-slate-100 rounded-lg p-6 text-center hover:bg-slate-200 transition cursor-pointer">
          <div class="text-4xl mb-3">🏙️</div>
          <div class="font-semibold">Touring</div>
        </a>
      </div>
    </div>
  </section>

  <section class="py-16 bg-blue-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Explore?</h2>
      <p class="text-xl mb-8">Discover detailed specs and AI-powered insights</p>
      <a href="/bikes" class="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-slate-100 transition">
        Browse All Motorcycles
      </a>
    </div>
  </section>
</BaseLayout>