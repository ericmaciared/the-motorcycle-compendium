---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { supabase } from '../../lib/supabase';

// Fetch all manufacturers
const { data: manufacturers, error } = await supabase
  .from('manufacturers')
  .select('*')
  .order('name');

if (error) {
  console.error('Error fetching manufacturers:', error);
}
---

<BaseLayout title="Motorcycle Manufacturers - The Motorbike Compendium">
  <div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2">Motorcycle Manufacturers</h1>
      <p class="text-slate-600">
        Explore {manufacturers?.length || 0} legendary motorcycle brands from around the world
      </p>
    </div>

    <!-- Manufacturers Grid -->
    {manufacturers && manufacturers.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {manufacturers.map(manufacturer => (
          <a
            href={`/manufacturers/${manufacturer.slug}`}
            class="group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-slate-100 hover:border-blue-200 hover:scale-[1.02]"
          >
            <div class="p-6">
              <!-- Name and Country -->
              <div class="mb-4">
                <h2 class="text-2xl font-bold text-slate-900 group-hover:text-blue-600 transition-colors mb-2">
                  {manufacturer.name}
                </h2>
                <div class="flex items-center gap-2 text-sm text-slate-600">
                  <span class="text-xl">{manufacturer.country === 'Japan' ? '🇯🇵' : manufacturer.country === 'Italy' ? '🇮🇹' : manufacturer.country === 'Germany' ? '🇩🇪' : manufacturer.country === 'USA' ? '🇺🇸' : manufacturer.country === 'Austria' ? '🇦🇹' : manufacturer.country === 'UK' ? '🇬🇧' : manufacturer.country === 'India' ? '🇮🇳' : '🌍'}</span>
                  <span class="font-medium">{manufacturer.country}</span>
                  {manufacturer.founded_year && (
                    <span class="text-slate-400">• Est. {manufacturer.founded_year}</span>
                  )}
                </div>
              </div>

              <!-- Description -->
              {manufacturer.description && (
                <p class="text-slate-600 text-sm line-clamp-3 mb-4">
                  {manufacturer.description}
                </p>
              )}

              <!-- View Details Link -->
              <div class="flex items-center text-blue-600 font-semibold group-hover:text-blue-700">
                View Models
                <span class="ml-2 transform group-hover:translate-x-1 transition-transform">→</span>
              </div>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="bg-white rounded-lg shadow-md p-12 text-center">
        <div class="text-6xl mb-4">🏭</div>
        <h3 class="text-xl font-bold mb-2">No manufacturers found</h3>
        <p class="text-slate-600">Check back soon for more manufacturers</p>
      </div>
    )}
  </div>
</BaseLayout>
