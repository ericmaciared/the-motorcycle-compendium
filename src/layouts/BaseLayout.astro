---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro'
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <Analytics />
    <style>
      body {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
      }
    </style>
  </head>
  <body class="min-h-screen bg-topo-100 antialiased relative">
    <!-- Topographic grid background -->
    <div class="fixed inset-0 bg-topo-grid opacity-40 pointer-events-none"></div>

    <!-- Subtle contour lines overlay -->
    <div class="fixed inset-0 bg-contour-lines opacity-30 pointer-events-none"></div>

    <!-- Main content with relative positioning -->
    <div class="relative z-10">
      <Navigation />
      <slot />
    </div>
  </body>
</html>