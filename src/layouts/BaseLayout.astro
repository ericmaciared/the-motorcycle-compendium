---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro'

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <Analytics />
  </head>
  <body class="min-h-screen bg-slate-50">
    <slot />
  </body>
</html>